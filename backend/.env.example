# Application
NODE_ENV=production
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ehs_production
DB_USER=ehs_user
DB_PASSWORD=your_secure_password_here

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@shubhamepc.com
SMTP_PASS=your_app_password

# Admin Settings
EHS_HEAD_EMAIL=head.ehs@shubhamepc.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/www/ehs-uploads

# CORS
ALLOWED_ORIGINS=https://ehs.shubhamepc.com,https://www.ehs.shubhamepc.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/ehs-system
